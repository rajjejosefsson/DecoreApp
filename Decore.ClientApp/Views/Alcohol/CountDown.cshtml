@model Decore.ClientApp.ViewModels.CountBeverageViewModel
@{
    ViewBag.Title = "Index";
}

<style>
    tr.first {
        background-color: #FFA112;
        color: white;
    }

    .table-holder {
        border-radius: 7px;
        box-shadow: 0px 0px 19px 0px rgba(0, 0, 0, 0.16);
    }
</style>

<div class="row event" id="myTable">
    <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2">
        <div class="my-account">
            <div class="bottom-padding">
                <div class="title-box">
                 
                @foreach (var countItem in Model.CountBeverages.Take(1))
                {
                    <h3>Uppvägning -  @countItem.CountTime </h3>
                }
                </div>

              
                
               
                <!-- Table  -->
                <div class="table-holder table-responsive">
                    <table class="table table-striped table-bordered table-responsive text-left my-orders-table">
                        <thead>
                        <tr class="first last">
                            <th>Dryck</th>
                            <th>Procent</th>
                            <th><span class="nobr">Mängd</span></th>
                            <th>Antal</th>
                        </tr>
                        </thead>
                        <tbody>
                            

                        @foreach (var countItem in Model.CountBeverages.OrderByDescending(m => m.CountTime))
                        {

                            <tr>
                                @foreach (var beverage in Model.Beverages)
                                {
                                    if (beverage.Id == countItem.BeverageId)
                                    {
                                        <td>@beverage.Name</td>
                                        <td>@beverage.Percent%</td>
                                        <td>@beverage.Amount @beverage.UnitOfMeasure</td>
                                        <td>@countItem.Amount</td>
                                        
                                    }
                                }
                            </tr>
                        }
                        </tbody>
                    </table>
                    
                    <div class="text-center">
                        <button class="btn btn-primary" style="margin-bottom: 10px">Starta nervägning</button>

                    </div>
                    
                </div>
                <!-- /Table  -->
            </div>
        </div>
    </div>
</div>