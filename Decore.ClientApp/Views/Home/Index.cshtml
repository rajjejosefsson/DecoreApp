
@model Decore.ClientApp.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Home Page";
}

<style>
    .box--first {
        margin-top: -40px;
        border-radius: 5px 5px 0 0;
    }

    .box {
        padding: 50px 30px;
        background: #fff;
        border-bottom: 1px solid #e9e9e9;
        position: relative;
        -webkit-box-shadow: 0px 0px 19px 0px rgba(0,0,0,0.16);
        -moz-box-shadow: 0px 0px 19px 0px rgba(0,0,0,0.16);
        box-shadow: 0px 0px 19px 0px rgba(0,0,0,0.16);
    }

    .header {
        background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(~/../content/images/summerparty.jpg);
        background-attachment: fixed;
        background-size: cover;
        background-position: 50% 50%;
        background-repeat: no-repeat;
        padding: 200px 0;
        color: #fff;
        margin: 0;
    }

    .back {
        background-color: #2a7ba8;

    }

    .page-wrapper {
        margin: 0;
        padding: 0;
    }

    .text-box h1 {
        font-size: 60px;
    }

    .text-box p {
        margin-top: -37px;
    }


    .login-form {
        max-width: 300px;
        background-color: white;
        color: black;
        padding: 20px;
        border-radius: 6px;
        margin:0 auto; 
        text-align:center;
    }

    .login-group {
        text-align:left
    }
    .login-h2{
        margin-bottom: 20px;
    }
    .login-p {
        margin:0 auto!important;        
        margin-top: 20px!important;
    }

</style>

@section outsideContainer
{
    <section> 
        <div class="header">
            <div class="text-box text-center">
                <img src="~/content/images/decore-logo.png">

            @using (Html.BeginForm("LoginEmployee", "Home", "POST"))
            {
                @Html.AntiForgeryToken()

                                <div class="login-form">
  
                           
                                         <h2 class="login-h2">Inloggning</h2>
                            
                                        <div class="form-group login-group" style="text-align:left">
                                            @Html.LabelFor(model => model.Username, "Användarnamn")
                                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "email@gmail.com" })
                                            <div class="error-holder">
                                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", })
                                            </div>
                                        </div>

                                        <div class="form-group login-group" style="text-align:left">
                                            @Html.LabelFor(model => model.Password, "Lösenord")
                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "password" })
                                            <div class="error-holder">
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                      <input type="submit" value="Logga in" class="btn btn-primary create-save-btn" />
                                </div>

                        }


               <p class="login-p">For students by students</p>
            </div>        
        </div>
    </section>
    

}



