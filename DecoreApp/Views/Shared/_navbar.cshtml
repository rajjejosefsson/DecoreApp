@using System.Web.Mvc.Html
<style>
    

    .navbar {
        border-bottom: transparent;
    }
   

     .navbar-default {
         background-color: #942842;
         -webkit-box-shadow: 0px 0px 19px 0px rgba(0,0,0,0.16);
         -moz-box-shadow: 0px 0px 19px 0px rgba(0,0,0,0.16);
         box-shadow: 0px 0px 19px 0px rgba(0,0,0,0.16);
     }


    .navbar-default li a {
        color: white !important;
        font-weight: bold;
    }

    .navbar-default .navbar-nav li a:hover {
        transition: background-color 0.8s ease;
    }

    .navbar-default .active a {
        background-color: #711f33 !important;
    }
       

    .navbar-header img {
        width: 100px;
        position: absolute;
        left: 10px;
        top: 0;
    }
            
    .navbar-nav {
        margin-right: 0;
        margin-left: 80px;
    }
</style>

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/Home/Index"><img src="../../content/images/decore-logo.png"></a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">
                    @Html.ActionLink("Hem", "Index", "Home")
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "EventList" ? "active" : "")">
                    @Html.ActionLink("Events", "Index", "EventList")
                </li>

                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "CreateEvent" ? "active" : "")">
                    @Html.ActionLink("Create Event", "Index", "CreateEvent")
                </li>
                 
                <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Alcohol" ? "active" : "")">
                    @Html.ActionLink("Alcohol", "Index", "Alcohol")
                </li>

            </ul>
        </div>
    </div>
</nav>

